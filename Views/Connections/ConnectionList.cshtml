
<style>
    .main-containers {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: system-ui, sans-serif;
    }

    .main-heading {
        text-align: center;
        font-size: 2em;
        margin-bottom: 20px;
    }

    .toggle-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
    }

        .toggle-buttons button {
            padding: 10px 20px;
            font-size: 1em;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
        }

            .toggle-buttons button:hover {
                background-color: #0056b3;
            }

    .panel {
        display: none;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        background-color: #f9f9f9;
    }

        .panel h2 {
            font-size: 1.5em;
            margin-bottom: 15px;
            color: #333;
        }

        .panel ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .panel li {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #fff;
        }

    .profile-picture {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 3px;
    }

    .action-buttons {
        display: flex;
        gap: 5px;
        align-items: center;
    }

    .view-profile-btn, .accept-btn, .reject-btn {
        padding: 6px 12px;
        font-size: 0.9em;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .view-profile-btn {
        background-color: #007bff;
        color: #fff;
    }

    .accept-btn {
        background-color: #28a745;
        color: #fff;
    }

    .reject-btn {
        background-color: #dc3545;
        color: #fff;
    }

    .panel.active {
        display: block;
    }

    @@media (max-width: 768px) {
        .toggle-buttons {
            flex-direction: column;
            gap: 10px;
        }

        .panel li {
            flex-direction: column;
            align-items: flex-start;
        }

        .action-buttons {
            margin-top: 8px;
        }
    }
</style>
<div class="main-containers">

    <a class="btn btn-primary" href="@Url.Action("ChatBox","Chat")">Back</a>
    <h1 class="main-heading">Connections</h1>

    <div class="toggle-buttons">
        <button id="connectionsListBtn" onclick="loadPanel('connectionList')">Connections List</button>
        <button id="pendingRequestsBtn" onclick="loadPanel('pendingRequests')">Pending Requests</button>
    </div>

    <div id="connectionList" class="panel hidden"></div>

    <div id="pendingRequests" class="panel hidden"></div>
</div>




